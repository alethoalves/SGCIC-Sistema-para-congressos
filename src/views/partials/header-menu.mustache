<script>
    function open(btn) {
        document.querySelector(btn).style.display = 'flex';
        document.querySelector(btn).style.opacity = 0;
            setTimeout(()=>{
                document.querySelector(btn).style.opacity = 1;
            },200)    
    };
    function close(btn) {
        document.querySelector(btn).style.opacity = 1;
            setTimeout(()=>{
                document.querySelector(btn).style.opacity = 0;
            },200)
            setTimeout(()=>{
                document.querySelector(btn).style.display = 'none';
            },400)
            return 1
    };
    document.querySelector('.header-menu-btn').addEventListener('click',()=>{
        if (document.querySelector('.header-menu').style.display == 'none' || document.querySelector('.header-menu').style.display == '') {
            open('.header-menu')
        }else{
            close('.header-menu')
        } 
    });
    document.querySelector('.header-menu').addEventListener('mouseleave',()=>{
        close('.header-menu')
    });
</script>